  </nav>
  <hr>
  <h2>Thống kê nhanh</h2>
  <?php
    $r1 = $mysqli->query("SELECT COUNT(*) as c FROM products")->fetch_assoc()['c'];
    $r2 = $mysqli->query("SELECT COUNT(*) as c FROM orders")->fetch_assoc()['c'];
    echo "<p>Sản phẩm: $r1</p><p>Đơn hàng: $r2</p>";
  ?>
